<VBox id="LoginVBox" alignment="CENTER_LEFT" prefHeight="570.0" prefWidth="570.0" style="-fx-background-color: #BBD2E8;" stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Admin.LoginController">
