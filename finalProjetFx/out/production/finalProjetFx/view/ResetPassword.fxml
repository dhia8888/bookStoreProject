                <font>
                    <Font size="35.0" />
                </font>
                <padding>
                    <Insets bottom="25.0" left="5.0" right="5.0" top="20.0" />
                </padding>
            </Label>
            
        </HBox>
        <HBox prefHeight="40.0" prefWidth="200.0" styleClass="tf-box">
            <VBox.margin>
                <Insets left="80.0" right="85.0" />
            </VBox.margin>
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/icons8-email-50.png" />
                    </image>
                </ImageView>
                 <TextField fx:id="emailUser" prefHeight="40.0" prefWidth="350.0" promptText="Email" /> 
            </children>
        </HBox>
        
        <HBox alignment="CENTER" layoutX="25.0" layoutY="272.0" prefHeight="46.0" prefWidth="392.0" spacing="30">
            <VBox.margin>
                <Insets left="25.0" right="15.0" top="20.0" />
            </VBox.margin>
            <children>
            <Button fx:id="Reset_button" mnemonicParsing="false" onAction="#ResetPassword" prefHeight="51.0" prefWidth="279.0" style="-fx-background-color: #225D95;" text="Reset your password" textFill="#f5f4f4">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            </children>
        </HBox>
         <HBox alignment="CENTER" layoutX="25.0" layoutY="272.0" prefHeight="46.0" prefWidth="392.0" spacing="30">
            <VBox.margin>
                <Insets left="25.0" right="15.0" top="20.0" />
            </VBox.margin>
            <children>

            </children>
        </HBox>
               
    </children>
</VBox>
